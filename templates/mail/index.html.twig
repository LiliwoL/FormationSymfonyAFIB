{% extends 'base.html.twig' %}

{% block title %}Hello MailController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Formulaire envoi Email</h1>

    <!-- Pour modifier à la volée l'action et la méthode du formulaire -->
    <!-- {{ form_start(formulaire, {'action': '/mailEnvoyé', 'method': 'GET'}) }} -->
    {{ form_start(formulaire) }}

        <div class="form-group">
            {{ form_widget(formulaire.sender) }}

            {# Le label #}
            {{ form_label(formulaire.sender) }}

            {{ form_errors(formulaire.sender) }}
        </div>

        <!-- Reste des champs -->
        {{ form_widget(formulaire) }}


        <input class="btn btn-primary" type="submit" value="Envoyer"/>
    {{ form_end(formulaire) }}
    
</div>
{% endblock %}
