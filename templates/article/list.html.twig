{% extends 'base.html.twig' %}

{% block title %}Liste de TOUS les articles{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Liste de TOUS les articles</h1>

        {{ dump(listeArticles) }}

        <table class="table table-striped table-hover">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Body</th>
                <th>Price</th>
            </tr>
            </thead>
            <tbody>
            {% for article in listeArticles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.body }}</td>
                    <td>
                        {{ article.price }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Navigation -->
    <nav>
        <ul>
            <li><a href="{{ path('article') }}">Cr√©er un nouvel article</a></li>
        </ul>
    </nav>
{% endblock %}
