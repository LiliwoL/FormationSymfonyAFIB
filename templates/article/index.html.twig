{% extends 'base.html.twig' %}

{% block title %}Création d'un nouvel article{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Création d'un nouvel article</h1>

        <!-- Pour modifier à la volée l'action et la méthode du formulaire -->
        {{ form_start(formulaireArticle) }}

            <!-- Reste des champs -->
            {{ form_widget(formulaireArticle) }}


            <input class="btn btn-primary" type="submit" value="Créer un nouvel article"/>
        {{ form_end(formulaireArticle) }}
    </div>

    <!-- Navigation -->
    <nav>
        <ul>
            <li><a href="{{ path('Liste des articles') }}">Lister tous les articles</a></li>
        </ul>
    </nav>
{% endblock %}
